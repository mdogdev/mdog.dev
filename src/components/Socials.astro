---
import { socialLinks } from "../scripts/socialLinks";
---

<div>
    {
        Object.entries(socialLinks).map(([key, value]) => (
            <section>
                <a href={value.url} target="_blank" rel="noopener noreferrer">
                    <img src={`/icons/socials/${key}.svg`} alt={key} width="48" height="48" />
                    <h2>{key.charAt(0).toUpperCase() + key.slice(1)}</h2>
                </a>
            </section>
        ))
    }
</div>

<style>
    div {
        display: flex;
        flex-direction: row;
        flex-wrap: wrap;
        gap: 1rem;
    }

    img {

        margin: 0.8rem;
    }

    section {
        display: flex;
        flex-direction: row;
        gap: 0.5rem;
        background-color: gray;
        border-radius: 25px;
        justify-content: center;
        align-items: center;
        padding: 0.5rem;
        width: 150px;
        height: 150px;
    }

    h2 {
        font-size: 1.5rem;
        margin: 0;
        color: var(--color);
    }
</style>